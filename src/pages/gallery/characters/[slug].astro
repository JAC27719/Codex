---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { characters } from '../../../data/pixelArt';

export function getStaticPaths() {
  return characters.map(({ slug, title, src, description }) => ({
    params: { slug },
    props: { title, src, description },
  }));
}

const { title, src, description } = Astro.props;
const pageTitle = title;
---
<BaseLayout pageTitle={pageTitle}>
  <article class="mx-auto max-w-7xl py-8">
    <header class="mb-6 text-center">
      <h2 class="text-2xl font-semibold">{title}</h2>
    </header>
    <div class="flex justify-center">
      <div class="theme-card mx-auto w-full max-w-[95vw] sm:w-[256px] md:w-[384px] lg:w-[512px] aspect-square overflow-hidden rounded-md border border-zinc-200 bg-white dark:border-zinc-800 dark:bg-zinc-800 transition-colors p-6 flex items-center justify-center">
        <img
          src={src}
          alt={title}
          width={32}
          height={32}
          class="h-full w-full [image-rendering:pixelated] object-contain"
          loading="eager"
          decoding="async"
        />
      </div>
    </div>
    {description && (
      <p class="mt-4 text-center text-sm text-zinc-600 dark:text-zinc-300">{description}</p>
    )}
    <div class="mt-6 text-center">
      <a href="/gallery" class="text-sm underline underline-offset-4 decoration-2">Back to Gallery</a>
    </div>
  </article>
</BaseLayout>
