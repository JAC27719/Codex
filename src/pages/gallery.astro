---
import BaseLayout from '../layouts/BaseLayout.astro';
import { landscapes, characters } from '../data/pixelArt';
const pageTitle = 'Gallery';
---
<BaseLayout pageTitle={pageTitle}>
  <section aria-label="Landscapes" class="py-6">
    <h2 class="mb-4 text-lg font-semibold">Landscapes</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 place-items-center">
      {landscapes.map((item) => (
        <a href={`/gallery/landscapes/${item.slug}`} class="group w-full max-w-[360px]">
          <figure class="w-full">
            <div class="theme-card aspect-[16/9] w-full overflow-hidden rounded-md border border-zinc-200 bg-white dark:border-zinc-800 dark:bg-zinc-800 transition-colors">
              <img
                src={item.src}
                alt={item.title}
                width={320}
                height={180}
                class="h-full w-full object-contain [image-rendering:pixelated] transition-transform duration-200 group-hover:scale-[1.02]"
                loading="lazy"
                decoding="async"
              />
            </div>
            <figcaption class="mt-2 text-center text-sm font-medium">{item.title}</figcaption>
          </figure>
        </a>
      ))}
    </div>
  </section>

  <section aria-label="Characters" class="py-6">
    <h2 class="mb-4 text-lg font-semibold">Characters</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6 place-items-center">
      {characters.map((item) => (
        <a href={`/gallery/characters/${item.slug}`} class="group w-full max-w-[200px]">
          <figure class="w-full">
            <div class="theme-card aspect-square w-full overflow-hidden rounded-md border border-zinc-200 bg-white dark:border-zinc-800 dark:bg-zinc-800 transition-colors p-4 flex items-center justify-center">
              <img
                src={item.src}
                alt={item.title}
                width={32}
                height={32}
                class="h-[128px] w-[128px] sm:h-[160px] sm:w-[160px] [image-rendering:pixelated] object-contain transition-transform duration-200 group-hover:scale-105"
                loading="lazy"
                decoding="async"
              />
            </div>
            <figcaption class="mt-2 text-center text-sm font-medium">{item.title}</figcaption>
          </figure>
        </a>
      ))}
      {characters.length === 0 && (
        <p class="col-span-full text-sm text-zinc-600 dark:text-zinc-300">No characters yet. Add some under <code>/public/pixel-art/characters/</code> and list them in <code>src/data/pixelArt.ts</code>.</p>
      )}
    </div>
  </section>
</BaseLayout>
